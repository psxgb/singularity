{
  "model": {
    "n_layer": 3,
    "n_head": 8,
    "d_model": 256,
    "d_ff": 256,
    "vocab_size": null,
    "max_seq_len": 256,
    "dropout": 0.1,
    "tie_word_embeddings": true,
    "use_rope": true
  },
  "training": {
    "batch_size": 16,
    "micro_batch_size": 16,
    "gradient_accumulation_steps": 1,
    "n_epochs": 1,
    "total_tokens_target": 400000000,
    "learning_rate": 3e-4,
    "betas": [0.9, 0.95],
    "weight_decay": 0.1,
    "warmup": 2000,
    "lr_scheduler": "cosine",
    "max_grad_norm": 1.0,
    "seed": 1,
    "fp16": true,
    "save_dir": "saved_model",
    "save_every_steps": 100000,
    "optimizer_type": "AdamW"
  },
  "data": {
    "datasets": [
      {"name": "wikitext", "config": "wikitext-103-raw-v1", "split": "train"}
    ],
    "english_only": true,
    "min_length": 5,
    "shuffle_buffer": 10000
  },
  "model_name": "llm_expert_small"
}